#include <stdio.h>
#include <cstdlib>
#include <iostream>
#include <fstream>

int main(){
    int num = 0, soma = 0, cont = 1;

        cout << "\n\t\tGrãos de Milho";

        while (cont < 64){
            num = 2 * cont;
            soma = soma + num;
            cont++;
        }

        cout << "\n\n\tA quantidade de milho que caberia nesse tabuleiro é: " << 1 + soma;

    return 0;
}
