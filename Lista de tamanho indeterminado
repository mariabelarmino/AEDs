#include <cstdlib>
#include <iostream>

using namespace std;

int main() {

    int i, j;
    float valor;

    cout << "\n\tIndique o tamanho da sua lista: ";
    cin >> i;

    while (i > 255 || i <= 0) {
        cout << "\n\tDigite um valor entre 0 e 255: ";
        cin >> i;
    }

    float vetor[i];
    
    cout << "\n\n\tDigite os valores para sua lista: ";

    for (j = 0; j < i; j++) {
        cout << "\n\t" << j + 1 << "Â° valor: ";
        cin >> valor;
        vetor[j] = valor;
    }
    
    cout << "\n\tLista: [";
    
    for (j = 0; j < i;){
        cout << vetor[j];
        j++;
        if (j < i)
            cout << ", ";
    }
    cout << "]";

    return 0;
}
