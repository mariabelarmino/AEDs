#include <stdio.h>

int main(){
    int idade, positivo, negativo, idadesim, total, maioridade, menoridade;
    float media;
    char avaliacao;

    printf("\n\tPesquisa XYZ");

    while (idade != 0){
        
        printf("\n\n\tDigite a sua idade: ");
        scanf("%d", &idade);
        printf("\n\tAvalie: diga se gostou do novo produto XYZ");
        scanf("%c", &avaliacao);

        if (avaliacao == 's'){
        positivo++;
        idadesim = idade;
            if (idade > maioridade)
            maioridade = idade;
            else
                if (idade < menoridade && idade != 0)
                menoridade = idade;
        }
        else 
            if (avaliacao == 'n')
            negativo++;

        total++;
    }

    media = idadesim/total;

    printf("\n\n\tO número de pessoas que responderam sim foi: %d", positivo);
    printf("\n\n\tO número de pessoas que responderam não foi: %d", negativo);
    printf("\n\n\tA média de idade das pessoas que responderam sim é: %f", media);
    printf("\n\n\tO mais velho que respondeu sim foi: %d", maioridade);
    printf("\n\tO mais novo que respondeu sim foi: %d", menoridade);
}
