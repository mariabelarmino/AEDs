#include <stdio.h>
int main(){
  float altura, peso;
  
  printf("\n\t Cálculo do Índice de Massa Corporal\\n\\n")
  printf("\n\t Digite o seu peso:");
  scanf("%f", &peso);
  while (peso < 0.0 ){
      printf("\n\tValor inválido, digite novamente seu peso:");
      scanf("%f", &peso);
  } 
  printf("\n\t Digite a sua altura:");
  scanf("%f", &altura;
  while (altura < 0.0){
      printf("\n\tValor inválido, digite novamente sua altura:");
      scanf("%f", &altura);
  }
   printf("\n\n\t Seu IMC é: %f", (peso/(altura*altura)) );
   if (IMC < 18.5)
   printf("\t Você está magro!");
   else 
       if (IMC >= 18.5 && IMC<24.9)
       printf("\t IMC normal!");
       else
           if (IMC >= 25 && IMC<29.9)
           printf("\t Você está em sobrepeso!");
           else
               if (IMC >= 30 && IMC<39.9)
               printf("\tVocê está obeso!");
               else 
                   if (IMC > 40)
                   printf("\tVocê está em obesidade grave!");
  return 0;
}
